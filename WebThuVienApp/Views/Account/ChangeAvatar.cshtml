<section id="breadcrumb">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="/">Trang chủ</a></li>
            <li class="active">Đổi ảnh đại diện</li>
        </ul>
    </div>
</section>

<section class="section" style="min-height: calc(100vh - 231px - 367px)">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2 class="title">Trang cá nhân người dùng</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="list-user-function text-center medium-font upper-case">
                    <div class="function-item ">
                        <a href="/tai-khoan/thong-tin-ca-nhan" title="Thông tin cá nhân">Thông tin cá nhân</a>
                    </div>
                    <div class="function-item ">
                        <a href="/tai-khoan/thay-doi-thong-tin" title="Đổi thông tin người dùng">Đổi thông tin người dùng</a>
                    </div>
                    <div class="function-item ">
                        <a href="/tai-khoan/thay-doi-mat-khau" title="Đổi mật khẩu người dùng">Đổi mật khẩu</a>
                    </div>
                    <div class="function-item function-active">
                        <a href="/tai-khoan/thay-doi-anh-dai-dien" title="Đổi ảnh đại diện">Đổi ảnh đại diện</a>
                    </div>
                    <div class="function-item ">
                        <a href="/tai-khoan/danh-sach-yeu-thich" title="Danh sách yêu thích">Danh sách yêu thích</a>
                    </div>
                    <div class="function-item ">
                        <a href="/tai-khoan/don-hang" title="Đơn hàng">Đơn hàng</a>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <form action="" method="POST" role="form" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="form-custom-inline">
                            <div class="form-label text-right">
                                <label for="CustomerAvatar">Chọn ảnh đại diện mới:</label>
                            </div>
                            <div class="form-input">
                                <input type="file" id="CustomerAvatar" name="CustomerAvatar" />
                                <img src="" id="previewAvatar" style="width: 200px;" />
                            </div>
                        </div>
                        <div class="form-custom-inline">
                            <div class="form-label"></div>
                            <div class="form-input">
                                <button type="button" onclick="changeAvatar()" class="primary-btn">Đổi ảnh đại diện</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function changeAvatar() {
            let avatar = $("#CustomerAvatar")[0].files[0]
            let avatarData = new FormData()
            avatarData.append("file", avatar)

            $.ajax({
                url: "/tai-khoan/thay-doi-avatar",
                method: 'POST',
                data: avatarData,
                success: function (res) {
                    console.log(res)
                }
            })
        }
    </script>
}
