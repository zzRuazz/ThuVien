@{
    var showNavbar = false;

    if (ViewBag.ShowOnClick != null)
    {
        showNavbar = ViewBag.ShowOnClick;
    }
}

<!DOCTYPE HTML>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewData["Title"] | Thư viện ABC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/form.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/megamenu.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/fwslider.css" rel="stylesheet" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Exo+2' rel='stylesheet' type='text/css' />
</head>
<body>
    <div class="header-top">
        <div class="wrap">
            <div class="header-top-left">
                <div class="box">
                    <select tabindex="4" class="dropdown">
                        <option value="" class="label" value="">Ngôn ngữ :</option>
                        <option value="1">Tiếng Việt</option>
                        <option value="2">English</option>
                    </select>
                </div>
                <div class="clear"></div>
            </div>
            <div class="cssmenu">
                <ul>
                    <li class="active"><a href="@Url.Action("Index","Account")">Tài khoản</a></li> |
                    <li><a href="@Url.Action("Wishlist","Book")">Yêu thích</a></li> |
                    <li><a href="@Url.Action("Checkout","Account")">Checkout</a></li> |
                    <li><a href="@Url.Action("Login","Account")">Đăng nhập</a></li> |
                    <li><a href="@Url.Action("Register","Account")">Đăng ký</a></li>
                </ul>
            </div>
            <div class="clear"></div>
        </div>
    </div>

    <div class="header-bottom">
        <div class="wrap">
            <div class="header-bottom-left">
                <div class="logo">
                    <a href="@Url.Action("Index","Home")"><img src="~/images/logo.png" alt="" /></a>
                </div>
                <div class="menu">
                    <ul class="megamenu skyblue">
                        <li class="active grid"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li>
                            <a class="color4" href="@Url.Action("Index1","Book")">Sách</a>
                        </li>
                        <li class="active"><a href="@Url.Action("About","Contact")">Giới thiệu</a></li>
                        <li><a href="@Url.Action("Index","Contact")">Liên hệ</a></li>
                        <li><a class="color7" href="@Url.Action("BorrowTicket","Account")">Phiếu mượn</a></li>
                    </ul>
                </div>
            </div>
            <div class="header-bottom-right">
                <div class="search">
                    <input type="text" name="s" class="textbox" value="Tìm kiếm" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Tìm kiếm';}">
                    <input type="submit" value="Subscribe" id="submit" name="submit">
                    <div id="response"> </div>
                </div>
            </div>
            <div class="clear" style="height: 30px"></div>
        </div>
    </div>

    <div class="main">
        @RenderBody()
    </div>

    <div class="footer">
        <div class="footer-top">
            <div class="wrap">
                <div class="section group example">
                    <div class="col_1_of_2 span_1_of_2">
                        <ul class="f-list">
                            <li><img src="~/images/2.png"><span class="f-text">Cung cấp dịch vụ giao sách tận nhà</span><div class="clear"></div></li>
                        </ul>
                    </div>
                    <div class="col_1_of_2 span_1_of_2">
                        <ul class="f-list">
                            <li><img src="~/images/3.png"><span class="f-text">Hotline! Miễn phí: 1900100có </span><div class="clear"></div></li>
                        </ul>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
        <div class="footer-middle">
            <div class="wrap">
                <div class="section group example">
                    <div class="col_1_of_f_1 span_1_of_f_1">
                        <div class="section group example">
                            <div class="col_1_of_f_2 span_1_of_f_2">
                                <h3>Facebook</h3>
                                <div class="like_box">
                                    <div class="fb-like-box" data-href="http://www.facebook.com" data-colorscheme="light" data-show-faces="true" data-header="true" data-stream="false" data-show-border="true"></div>
                                </div>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="col_1_of_f_1 span_1_of_f_1">
                    <div class="section group example">
                        <div class="col_1_of_f_2 span_1_of_f_2">
                            <h3>Thông tin</h3>
                            <ul class="f-list1">
                                <li><a href="@Url.Action("Detail","News")">Thư viện ABC nói không với sách lậu</a></li>
                            </ul>
                        </div>
                        <div class="col_1_of_f_2 span_1_of_f_2">
                            <h3>Liên lạc</h3>
                            <div class="company_address">
                                <p>Tầng 5, tòa nhà 6th Element</p>
                                <p>khu đô thị Tây Hồ Tây, Hà Nội,</p>
                                <p>Việt Nam</p>
                                <p>Phone: 1900100có</p>
                                <p>Fax: 1900100có</p>
                                <p>Email: <span>thuvienabc.com</span></p>
                            </div>
                            <div class="social-media">
                                <ul>
                                    <li> <span class="simptip-position-bottom simptip-movable" data-tooltip="Google"><a href="https://www.google.com" target="_blank"> </a></span></li>
                                    <li><span class="simptip-position-bottom simptip-movable" data-tooltip="Facebook"><a href="https://www.facebook.com" target="_blank"> </a></span></li>
                                </ul>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <div class="wrap">
            <div class="copy">
                <p>© 2023 Powered by <a href="http://google.com" target="_blank">Bổ túc IT</a></p>
            </div>
            <div class="f-list2">
                <ul>
                    <li class="active"><a href="@Url.Action("About","Contact")">Giới thiệu</a></li> |
                    <li><a href="@Url.Action("Delivery","Contact")">Mượn & Trả</a></li> |
                    <li><a href="@Url.Action("Rule","Contact")">Chính sách & Điều kiện</a></li> |
                    <li><a href="@Url.Action("Index","Contact")">Liên hệ</a></li>
                </ul>
            </div>
            <div class="clear"></div>
        </div>
    </div>

    <script src="~/js/jquery1.min.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/megamenu.js" type="text/javascript"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/css3-mediaqueries.js"></script>
    <script src="~/js/fwslider.js"></script>
    <script src="~/js/jquery.easydropdown.js"></script>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
</body>
</html>